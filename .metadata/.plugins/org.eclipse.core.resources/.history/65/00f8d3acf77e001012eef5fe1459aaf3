<style type="text/css">
	.main{
		border: 1px solid #aaa;
		
	}
	.check{
		margin: 10px 10px;
	}
</style>
	<script type="text/javascript">
	$(document).ready(function() {
		console.log("ready?");
		$("ans").hide();
		
		$("ans.check1").click(function() {
			this.show();
		});

		var bt1 = false;
		$("ans.check1").click(function() {
			if(!bt1){
				this.show();
				bt1 = true;
			}else{
				$(".collect1").hide();
				bt1 = false;
			}
		});
		
		var bt2 = false;
		$(".check2").click(function() {
			if(!bt2){
				$(".collect2").show();
				bt2 = true;
			}else{
				$(".collect2").hide();
				bt2 = false;
			}
		});
	})
		
	</script>
</head>
