<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<script src="https://code.jquery.com/jquery-latest.min.js"></script>
<title>Insert title here</title>
<style type="text/css">
	li{
		list-style-type: none;
	}
	#slideShow{
		width: 300px;
		height: 300px;
		margin: auto 50px;
		position: relative;
		overflow: hidden;
	}
	.slides {
	position: absolute;
	left: 0;
	top: 0;
	height: 2500px; /* 슬라이드할 사진과 마진 총 넓이 */
	transition: down 0.5s ease-out;
	/*ease-out: 처음에는 느렸다가 점점 빨라짐*/
	}
	.slides li:first-child{
		margin-top:100px;
	}
	.slides li{
		float: left;
	}

</style>
<script type="text/javascript">
	const slides = document.querySelector('.slides'); //전체 슬라이드 컨테이너
	const slideImg = document.querySelectorAll('.slides li'); //모든 슬라이드들
	let currentIdx = 0; //현재 슬라이드 index
	const slideCount = slideImg.length; // 슬라이드 개수
	const prev = document.querySelector('.prev'); //이전 버튼
	const next = document.querySelector('.next'); //다음 버튼
	const slideheight = 300; //한개의 슬라이드 넓이
	const slideMargin = 100; //슬라이드간의 margin 값

	slides.style.height = (slideheight + slideMargin)*slideCount+"px";
	
	$(document).ready(function() {
		$("body").on("mousewheel",function(e) {
			var wheel = e.originalEvent.wheelDelta;
			
			function moveSlide(num) {
				$(".slides").stop().animate({
					top:-(num*slideheight)+"px"
				},500);
			}
			
			if(wheel>0){
				console.log("up");
				moveSlide(currentIdx + 1);
			}else{
				console.log("down");
				moveSlide(currentIdx - 1);
			}
		});
	});
</script>
</head>
<body>
	<div id="slideShow">
		<ul class="slides">
			<li><img src="../image/ramjii.jpg"></li>
			<li><img src="../image/ramjiii.jpg"></li>
			<li><img src="../image/ramjiiii.jpg"></li>
			<li><img src="../image/ramjiiiii.jpg"></li>
			<li><img src="../image/ramjiiiiii.jpg"></li>
			<li><img src="../image/ramjiiiiiii.jpg"></li>
		</ul>
		<p class="controller">
			
		</p>
	</div>
</body>
